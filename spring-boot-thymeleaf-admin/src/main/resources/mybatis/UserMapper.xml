<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyx.mapper.http.UserMapper">

	<select id="queryUserById"  parameterType="com.zyx.model.PageData" resultType="int">
	select count(1) from wp_user where user_id=#{USER_ID}
	</select>
	
    <insert id="register" parameterType="com.zyx.model.PageData">
    insert into wp_user values(#{USER_ID},#{USER_PWD})
    </insert>
    
</mapper>